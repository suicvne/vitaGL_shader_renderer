void main(
    float2 aPosition : ATTR0,
    float2 vTexCoord : ATTR1,
    float4 vColor : ATTR2,
    uniform float4x4 mvp : BUFFER1,
    uniform float4x4 _rot : BUFFER2,
    uniform float4x4 _scale : BUFFER3,
    float4 out vertPos : POSITION,
    float4 out fragColor : COLOR,
    float2 out texCoord : TEXCOORD0
)
{
    vertPos = mul(mul(mul(float4(aPosition, 0.f, 1.f), _scale), _rot), mvp);
    fragColor = vColor;
    texCoord = vTexCoord;
}